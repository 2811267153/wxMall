<!-- pages/category/category.wxml -->
<view class="category">
  <scroll-view class="category-nav" enable-flex scroll-y>
    <block wx:for="{{categoryList}}" wx:key="id">
      <view class="category-item" bind:tap="getIndex" selectable="false" space="false" decode="false">
        <text class="">
          {{item.title}}
        </text>
      </view>
    </block>
  </scroll-view>
</view>