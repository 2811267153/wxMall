/* pages/detail/detail.wxss */
.detail {
  background-color: #f2f2f2;
}
.swiper {
  height: 30%;
  width: 100%;
  background-color: #f1f1f1;
}
.title {
  font-size: 24rpx;
}
#shopInfo {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 1.5%;
}
.price {
  display: block;
  padding: 2.5%;
}
._price {
  color: red;
  font-size: 40rpx;
}
.old_price {
  margin-left: 5%;
  font-size: 20rpx;
  text-decoration: line-through;
  letter-spacing: 1px;
  color: #b4b2b2;
}
.fn_wrap {
  display: flex;
}
.icon,
.cFav {
  width: 17%;
  background-color: pink;
  color: #f1f1f1;
  font-size: 20rpx;
  height: 10%;
  padding-bottom: 2%;
  border-radius: 5px;
  margin: 2.5%;
  padding: 0% 2.5%;
}
.cFav {
  padding: 5% 2.5%;
  background-color: rgb(241, 136, 219);
}
em {
  padding: 1% 1.5%;
  border: 1rpx solid #de8c71;
  color: #de8c71;
}

._discount {
  display: inline-block;
  padding: 1.5%;
  color: red;
  margin-right: 2.5%;
  margin-top: 2.5%;
  font-size: 20rpx;
}
.logistics {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 1.5%;
  /* background-color: red; */
}
.discount {
  width: 100%;
  padding: 2.5%;
  font-size: 24rpx;
}
h2 {
  display: block;
  font-size: 24rpx;

  padding-left: 2.5%;
  border-left: 2rpx solid red;
  line-height: 22rpx;
}
.discount h2 {
  margin-bottom: 2%;
}
.shopInfo {
  padding: 2.5%;
}
.postNotice {
  font-size: 20rpx;
}
.detail_shopInfo {
  margin-left: 2.5%;
  font-size: 26rpx;
}
.state {
  margin-right: 2.5%;
  margin-top: 2.5%;
  color: red;
}
.detail_serve {
  padding: 2.5%;
}
.detail_serve image {
  width: 22rpx;
  height: 22rpx;
  vertical-align: middle;
}
.detail_serve_item {
  margin: 1.5%;
  font-size: 22rpx;
  border-radius: 16rpx;
}
.comment {
  padding: 2.5%;
  text-align: center;
}
.comment h2 {
  text-align: left;
}
.comment h2 text {
  float: right;
}
.detail_comment {
  margin: 1.5%;
  display: flex;
  font-size: 22rpx;
}
.detail_comment image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50rpx;
}
.detail_comment ._comment {
  width: 15%;
}
.detail_comment_content {
  text-align: left;
}
.detail_comment ._comment view {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.button {
  font-size: 22rpx;
  font-weight: 100;
}

._shop_info {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 1.5%;
  font-size: 22rpx;
}

.shop_info_logo image {
  border-radius: 80rpx;
  vertical-align: middle;
  width: 80rpx;
  height: 80rpx;
  margin-right: 2.5%;
}

.info_tab {
  display: flex;
  justify-content: space-evenly;
}
.tab_info {
  flex: 1;
  text-align: center;
}
.info_cfac {
  line-height: 42rpx;
}

.tab_btn {
  font-size: 22rpx;
  font-weight: 400;
  background-color: #fff;
  border-radius: 16rpx;
  border: 1px solid #000;
  margin: 5% 12%;
}
.goods_info{
  display: flex;
  /* columns: 2;? */
  padding: 2.5%;
  border-radius: 16rpx;
  margin-bottom: 1.5%;
  background-color: #fff;
  font-size: 32rpx;
  /* text-align: center; */
}
.goods_content{
  display: flex;
  font-size: 24rpx;
}
.info_item_name{
  margin-bottom: 2.5%;
}
.table{
  width: 27vh;
}
.td {
  background-color: #ff5777;
  border: 1px solid transparent;
  margin: 1px;
  padding: 2.5%;
  border-radius: 8px;
  width: 100%;
}
.th {
  width: 100%;
  background-color: #fff;
  border: 1px solid #ff5777;
  margin: 1px;
  padding: 2.5%;
  border-radius: 8px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


.detail_info_img{
  width: 100%;
  border-radius: 8rpx;
}

.fixed{
  position: fixed;
  bottom: 1rpx;
  left: 0rpx;
  right: 0rpx;
}
.cart{
  height: 50px;
  line-height: 50px;
  display: flex;
}
.cart_info{
  display: flex;
  width: 40%;
  line-height: 50px;
  text-align: center;
}
.detail_info_mj{
  width: 50%;
  background-color: rgb(243, 247, 13);
  font-size: 32rpx;
}
._detail{
  width: 50%;
  float: left;
}
.cart_info image{
  width: 38rpx;
}
.detail_info_dp{
  background-color: #fff;
}
.detail_indo_gm{
  text-align: center;
  background-color: red;
  flex: 1;
  font-size: 22rpx;
  font-weight: 400;
}

.btn{
  bottom:90rpx;
}